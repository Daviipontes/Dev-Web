<div class="container mt-5">
    <h2 class="font-weight-bold"><%= title %></h2>
    
    <div id="products-list">
        <div class="row">
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="col-md-4 product-col">
                        <a href="/product/<%= product.id %>" class="product-card">
                            <img src="<%= serverUrl + product.images[0] %>" class="img-fluid" alt="<%= product.name %>">
                            <p class="product-title"><%= product.name %></p>
                            <p class="product-text">Seller: <%= product.seller %></p>
                            <p class="product-price">R$ <%= parseFloat(product.price).toFixed(2).replace('.', ',') %></p>
                        </a>
                    </div>
                <% }); %>
            <% } else { %>
                <p>No products found for "<%= title %>".</p>
            <% } %>
        </div>
    </div>
</div>

