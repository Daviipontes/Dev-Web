

<div class="container mt-5">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Shopping Cart</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Shopping Cart</h2>

                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th>Products</th>
                                <th>Price</th>
                                <th>Quantity</th>
                                <th>Sub-total</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (cart.length > 0) { %>
                                <% cart.forEach(item => { %>
                                <tr>
                                    <td>
                                        <button class="remove-button" onclick="removeFromCart(<%= item.id %>)">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#508C9B" class="bi bi-x" viewBox="0 0 16 16">
                                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708"/>
                                            </svg>
                                        </button>
                                        <img src="<%= item.images[0] %>" alt="<%= item.name %>" class="img-thumbnail mr-2" style="width: 50px;">
                                        <%= item.name %>
                                    </td>
                                    <td>R$ <%= item.price.toFixed(2).replace('.', ',') %></td>
                                    <td>
                                        <input type="number" class="quantity-btn" value="<%= item.quantity %>" min="1" onchange="updateCart(<%= item.id %>, this.value)">
                                    </td>
                                    <td>R$ <%= (item.price * item.quantity).toFixed(2).replace('.', ',') %></td>
                                </tr>
                                <% }) %>
                            <% } else { %>
                                <tr>
                                    <td colspan="4">Your cart is empty.</td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>

                    <div class="d-flex justify-content-between">
                        <a href="/" class="return-btn">← Return to Shop</a>
                        <button class="update-btn" onclick="location.reload()">Update Cart</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">Cart Totals</h3>
                    <table class="table">
                        <tr>
                            <td>Sub-total</td>
                            <td>R$ <%= cart.reduce((total, item) => total + (item.price * item.quantity), 0).toFixed(2).replace('.', ',') %></td>
                        </tr>
                        <tr>
                            <td>Shipping</td>
                            <td>Free</td>
                        </tr>
                        <tr>
                            <td>Discount</td>
                            <td>0</td>
                        </tr>
                        <tr>
                            <th>Total</th>
                            <th>R$ <%= cart.reduce((total, item) => total + (item.price * item.quantity), 0).toFixed(2).replace('.', ',') %></th>
                        </tr>
                    </table>
                    <a href="/checkout" class="btn checkout-button">Proceed to Checkout →</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function removeFromCart(id) {
        fetch('/cart/remove', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id })
        }).then(res => res.json())
          .then(data => {
            if (data.success) {
                location.reload();
            }
        });
    }

    function updateCart(id, quantity) {
        fetch('/cart/update', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ id, quantity })
        }).then(res => res.json())
          .then(data => {
            if (data.success) {
                location.reload();
            }
        });
    }
</script>
